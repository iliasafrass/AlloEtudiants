<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blueBodyColor">

    <Button
        android:id="@+id/suivant_form1"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="228dp"
        android:layout_height="58dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_signup"
        android:clickable="true"
        android:padding="16dp"
        android:text="Suivant"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categorie"
        app:layout_constraintVertical_bias="0.722" />

    <TextView
        android:id="@+id/besoin"
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:text="D'Ã©cris ton Besion"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/title_demande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/besoin"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/besoin"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Title"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/besoin" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/description-demande"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_below="@id/besoin"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_demande"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Description"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/besoin" />
    </android.support.design.widget.TextInputLayout>

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/categorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matiere"
        app:ms_arrowColor="@color/colorPrimaryDark"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelColor="#000"
        app:ms_floatingLabelText="Select your Subject"
        app:ms_hint="Please Choose"
        app:ms_hintColor="#000"
        app:ms_multiline="true" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/matiere"
        android:layout_width="356dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description-demande"
        app:ms_arrowColor="@color/colorPrimaryDark"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelColor="#000"
        app:ms_floatingLabelText="Select your Subject"
        app:ms_hint="Please Choose"
        app:ms_hintColor="#000"
        app:ms_multiline="true" />

</android.support.constraint.ConstraintLayout>