<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".publication.evenement.fragments.EventStep0">

    <TextView
        android:id="@+id/event"
        android:layout_width="384dp"
        android:layout_height="53dp"
        android:layout_marginTop="44dp"
        android:text="Evenement"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/title_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/besoin"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:hintTextAppearance="@style/MyHintText"
        android:layout_marginEnd="16dp"
        android:outlineSpotShadowColor="@color/blueBarColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:theme="@style/MyEditText"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:textSize="16sp"
            android:hint="Titre"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/event" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/description_event"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:hintTextAppearance="@style/MyHintText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_event"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/demande"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="DÃ©cris votre evenement"
            android:textSize="16sp"
            android:textStyle="bold"
            android:theme="@style/MyEditText" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_event">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="15"
            app:srcCompat="@drawable/ic_adresse_postal_24dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/adresse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:outlineSpotShadowColor="@color/blueBarColor"
            app:hintTextAppearance="@style/MyHintText"
            app:layout_constraintHorizontal_bias="0.0"
            app:passwordToggleEnabled="true">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:hint="Adresse"
                android:textSize="16sp"
                android:textStyle="bold"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/datePicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:lines="4"
            android:maxLines="4"
            android:minLines="2"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="Selectionner la date "
            android:textColor="@color/title"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/heurePicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:lines="4"
            android:maxLines="4"
            android:minLines="2"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="Selectionner l'heure"
            android:textColor="@color/title"
            android:textSize="18dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>