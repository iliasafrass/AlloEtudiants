<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp"
    card_view:cardCornerRadius="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:text="Status"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@color/notSoBlack"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/txtSender"
            card_view:layout_constraintTop_toBottomOf="@+id/txtSender" />

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_requests" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/cabin"
            android:text="11/02/2019 11:15"
            android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Subtitle"
            android:textSize="10sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/cabin"
            android:text="Invitation pour votre demande d'aide"
            android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Subtitle"
            android:textSize="12sp"
            card_view:layout_constraintStart_toEndOf="@+id/imgNotification"
            card_view:layout_constraintTop_toBottomOf="@+id/txtDate" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/cabin"
            android:text="Mini-projetAndroid"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@color/notSoBlack"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/txtInvitation"
            card_view:layout_constraintTop_toBottomOf="@+id/txtInvitation" />

        <TextView
            android:id="@+id/txtSender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/cabin"
            android:text="Mohamed Amine Waray \nM1, Informatique"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@color/notSoBlack"
            card_view:layout_constraintEnd_toEndOf="@+id/txtTitle"
            card_view:layout_constraintStart_toStartOf="@+id/txtTitle"
            card_view:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/cabin"
            android:text="EnvoyÃ©e par"
            android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Subtitle"
            android:textSize="12sp"
            card_view:layout_constraintStart_toStartOf="@+id/txtTitle"
            card_view:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>